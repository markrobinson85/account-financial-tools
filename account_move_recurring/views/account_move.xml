<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_move_form_recurring" model="ir.ui.view">
            <field name="name">account.move recurring</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="recurring_id" attrs="{'invisible': [('recurring_id', '=', False)]}"/>
                </field>
            </field>
        </record>

        <record id="view_account_move_filter" model="ir.ui.view">
            <field name="name">account.move.select</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <group position="inside">
                    <filter string="Recurring Entry" domain="[]" context="{'group_by':'recurring_id'}" />
                </group>
            </field>
        </record>

    </data>
</openerp>
